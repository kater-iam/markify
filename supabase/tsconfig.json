{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "*.ts",
    "tests/**/*.ts"
  ],
  "ts-node": {
    "transpileOnly": true
  }
} 